@model IEnumerable<Product> //!--Update this according to your project namespace and model-->

<div class="container mt-4">
    <!-- Welcome Text Block -->
    <div class="row">
        <div class="col">
            <h1 class="text-center">Welkom bij onze webshop!</h1>
            <p class="text-center">
                Hier vind je een breed scala aan producten speciaal geselecteerd voor jouw behoeften.
            </p>
        </div>
    </div>

    <!-- Product Display -->
    <div class="row">
        @foreach(var product in Model.Take(4)) 
        {
            <div class="col-md-6 my-3">
                <div class="card">
                    <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" />
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">@product.Description</p>
                        <a href="@Url.Action("Details", "Product", new { id = product.Id })" class="btn btn-primary">Bekijk Product</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

